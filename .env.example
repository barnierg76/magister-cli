# Magister CLI Configuration
# Copy to .env and fill in your values

# School code (e.g., vsvonh for Voortgezet Onderwijs Noord-Holland)
MAGISTER_SCHOOL=

# Optional: Username hint for login (not required, browser will ask)
MAGISTER_USERNAME=

# HTTP timeout in seconds (default: 30)
MAGISTER_TIMEOUT=30

# Run browser in headless mode (default: true)
MAGISTER_HEADLESS=true

# OAuth callback port (default: 8080, falls back to 8081, 8082 if busy)
MAGISTER_OAUTH_CALLBACK_PORT=8080

# OAuth timeout in seconds (default: 300 = 5 minutes)
MAGISTER_OAUTH_TIMEOUT=300
